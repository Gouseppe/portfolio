---
const { tittle, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{tittle || "Gouseppe - Portafolio"}</title>
    <meta
      name="description"
      content={description || "Portafolio de Gouseppe"}
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* variables */
  :root {
    --font-size-base: 20px;
    --font-size-sub-tittle: 32px;
    --font-size-tittle: 48px;
  }
  * {
    box-sizing: border-box;
  }
  p {
    margin: 0;
  }
  html,
  body {
    margin: 0;
    width: 100%;
  }

  body {
    background:
      fixed linear-gradient(transparent, #05010d 80%),
      fixed
        repeating-linear-gradient(
          #2b2b2b,
          #2b2b2b 1px,
          transparent 1px,
          transparent 40px
        ),
      fixed
        repeating-linear-gradient(
          to right,
          #2b2b2b,
          #2b2b2b 1px,
          transparent 1px,
          transparent 40px
        )
        #05010d;

    font-size: var(--font-size-base);
  }

  @media (max-width: 760px) {
    :root {
      --font-size-base: 16;
      --font-size-sub-tittle: 24px;
      --font-size-tittle: 38px;
    }
  }
</style>
